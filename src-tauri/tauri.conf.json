{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/schema/tauri.config.schema.json",
  "identifier": "com.rabbitsoft.hostdni",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "HostDNI",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "url": "http://localhost:1420"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "fs": {
      "scope": {
        "allow": [
          "/etc/hosts",
          "/etc/hosts.backup",
          "/etc/hosts.disabled"
        ],
        "requireLiteralLeadingDot": false,
        "directories": [
          "/etc"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
